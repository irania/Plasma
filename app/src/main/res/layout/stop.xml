<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stoprfcryo"
    android:orientation="vertical" >

    <com.Tirax.RF.TextFont
        android:id="@+id/txt_time_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:text="45&apos;"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="550dp"
        android:layout_height="290dp"
        android:layout_marginBottom="90dp"

        android:text="Button"
        android:layout_above="@+id/txt_time_stop"
        android:background="@drawable/stopbut" />

    <com.Tirax.RF.TextFont
        android:id="@+id/txt_stop_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="85dp"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_marginTop="30dp"
        android:layout_alignTop="@+id/seekBar" />


    <ImageButton
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginRight="25dp"
        android:id="@+id/btn_stop_power_range"
        android:background="@drawable/hider"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/btn_stop_settings"
        android:background="@drawable/settingsico"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="420dp"
        android:layout_height="80dp"
        android:progressDrawable="@drawable/seekbar_layout"
        android:progress="0"
        android:thumbTintMode="multiply"
        android:max="100"
        android:thumb="@drawable/seekbarthumb"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
