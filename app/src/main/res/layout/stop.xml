<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/stopgreenes"
    android:orientation="vertical" >

    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_time_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:textColor="#fff"
        android:textSize="17dp"
        android:text="45'"
        android:alpha="0"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="550dp"
        android:layout_height="290dp"
        android:layout_marginBottom="90dp"
        android:alpha="0"
        android:text="Button"
        android:layout_above="@+id/txt_time_stop"
         />

    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_stop_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignTop="@+id/txt_start_powerEqual"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginLeft="215dp" />


    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_stop_powerEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25000 pulse/sec"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_toLeftOf="@+id/btn_stop_power_up"
        android:layout_toStartOf="@+id/btn_stop_power_up"
        android:layout_marginRight="15dp" />



    <ImageButton
        android:layout_width="85dp"
        android:layout_height="20dp"
        android:layout_marginRight="25dp"
        android:id="@+id/btn_stop_power_range"
        android:background="@drawable/hider"
        android:layout_alignTop="@+id/btn_stop"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp" />


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/btn_stop_settings"
        android:background="@drawable/settingsico"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:progressDrawable="@drawable/seekbar_layout"
        android:progress="0"
        android:thumbTintMode="multiply"
        android:max="100"
        android:thumb="@drawable/seekbarthumb"
        android:layout_alignBottom="@+id/btn_stop_power_down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btn_stop_back"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btn_stop_power_range" />

    <Button
        android:id="@+id/btn_stop_power_down"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp"  />
    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_stop_autoMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONOPOLAR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/btn_stop_settings"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/btn_stop_power_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_stop_back"
        android:layout_toEndOf="@+id/btn_stop"
        android:layout_toRightOf="@+id/btn_stop" />


</RelativeLayout>
