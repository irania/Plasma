<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startr"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_back_start"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="0"
        android:text="Button" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="500dp"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="87dp"
        android:layout_toLeftOf="@+id/btn_back_start"
        android:alpha="0"
        android:text="Button" />



    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_start_autoMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONOPOLAR"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/btn_start_settings"
        android:layout_marginLeft="50dp"/>

    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_power_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75%"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignTop="@+id/txt_start_powerEqual"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_marginLeft="215dp"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:id="@+id/btn_start_settings"
        android:background="@drawable/settingsico"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:progressDrawable="@drawable/seekbar_layout"
        android:progress="0"
        android:thumbTintMode="multiply"
        android:max="100"
        android:thumb="@drawable/seekbarthumb"
        android:layout_alignBottom="@+id/btn_start_power_down"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="10dp"/>


    <Button
        android:id="@+id/btn_start_power_down"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="120dp" />

    <Button
        android:id="@+id/btn_start_power_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:text="Button"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/seekBar"
        android:layout_toEndOf="@+id/seekBar" />

    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_start_powerEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25000 pulse/sec"
        android:gravity="right"
        android:textAlignment="gravity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="17dp"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_toLeftOf="@+id/btn_start_power_up"
        android:layout_toStartOf="@+id/btn_start_power_up"
        android:layout_marginRight="15dp" />


</RelativeLayout>
