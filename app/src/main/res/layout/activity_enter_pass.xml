<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="main.activity.EnterPassActivity"
    android:background="@drawable/enterapasswordnew">

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button1"
        android:layout_marginBottom="57dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_above="@+id/btn_clear"
        android:layout_toRightOf="@+id/btn_clear"
        android:layout_toEndOf="@+id/btn_clear" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button2"
        android:layout_below="@+id/txt_pass"
        android:layout_toRightOf="@+id/button1"
        android:layout_marginLeft="6dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button3"
        android:layout_below="@+id/txt_pass"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"
        android:layout_marginLeft="9dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_toRightOf="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:layout_marginLeft="6dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button8"
        android:layout_toRightOf="@+id/button8"
        android:layout_toEndOf="@+id/button8"
        android:layout_marginLeft="7dp" />

    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:id="@+id/button0"
        android:layout_alignTop="@+id/button9"
        android:layout_toRightOf="@+id/button9"
        android:layout_toEndOf="@+id/button9"
        android:layout_marginLeft="9dp" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_clear"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_next_pass"
        android:layout_alignTop="@+id/btn_clear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0"
        android:id="@+id/btn_back_pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/button0"
        android:layout_toEndOf="@+id/button0" />


    <com.Tirax.plasma.TextFont
        android:id="@+id/txt_pass_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter The Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="20dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/btn_back_pass"
        android:layout_toLeftOf="@+id/button0"
        android:layout_toStartOf="@+id/button0" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="*************"
        android:id="@+id/txt_pass"
        android:textSize="30dp"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#ac0019"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_alignRight="@+id/button0"
        android:layout_alignEnd="@+id/button0" />

    <com.Tirax.plasma.TextFont
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Version: 3.0"
        android:id="@+id/txt_pass_version"
        android:textColor="#ffffff"
        android:gravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3" />
</RelativeLayout>
